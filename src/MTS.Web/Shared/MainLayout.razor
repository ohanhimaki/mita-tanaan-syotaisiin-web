@using MudBlazor.Utilities
@inherits LayoutComponentBase

<MudThemeProvider Theme="MyCustomTheme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>



<MudLayout>
  <MudAppBar Elevation="1">
    <MudImage
      Src="./android-chrome-192x192.png"
      Style="max-width: 4rem"
      ></MudImage>
    <MudText Typo="Typo.h5" Class="ml-3">Mitäs tänään syötäisiin?</MudText>
    <MudSpacer/>

  @* <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" /> *@

    @* https://github.com/ohanhimaki/mita-tanaan-syotaisiin-web *@
    <MudMenu  Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit">
      <MudMenuItem Icon="@Icons.Custom.Brands.GitHub"
                   Href="https://github.com/ohanhimaki/mita-tanaan-syotaisiin-web"
                   Target="_blank"
      >GitHub</MudMenuItem>
      <MudMenuItem Icon="@Icons.Custom.Brands.GitHub"
                   Href="https://github.com/ohanhimaki/mita-tanaan-syotaisiin-web/issues/new"
                   Target="_blank"
      >Report bug or feature request</MudMenuItem>
      <MudMenuItem Icon="@Icons.Material.Filled.Settings"
                   Href="/"
      >Admin</MudMenuItem>



    </MudMenu >
  </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>


@code{

  MudTheme MyCustomTheme = new MudTheme()
  {
    Palette = new Palette()
    {
      AppbarBackground = new MudColor("#e30059"),
      Primary = new MudColor("#e30059")
    }
  };

}
